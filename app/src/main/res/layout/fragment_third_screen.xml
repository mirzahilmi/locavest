<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".fragment.ThirdScreenFragment">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@drawable/welcome_page_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/imgContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/round_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgHeader" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="253dp"
        android:layout_height="87dp"
        android:layout_marginTop="28dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Sign up to start your healthier life today"
        android:textColor="#2d0c57"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgContainer" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="353dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Just a single sign up and youâ€™re ready to get all the highest quality local produce and have them delivered right to your doorstep!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/toNext"
        android:layout_width="324dp"
        android:layout_height="70dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#0bce83"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="Sign me up"
        app:layout_constraintBottom_toBottomOf="@+id/bgHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/imgContainer"
        app:layout_constraintEnd_toEndOf="@+id/imgContainer"
        app:layout_constraintStart_toStartOf="@+id/imgContainer"
        app:layout_constraintTop_toTopOf="@+id/imgContainer" />
</androidx.constraintlayout.widget.ConstraintLayout>