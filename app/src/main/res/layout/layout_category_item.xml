<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/category_container_theme"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/category_background"
            />
        <RelativeLayout
            android:id="@+id/category_container_data_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="20dp">
            <TextView
                android:id="@+id/category_container_data_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="36sp"
                android:textStyle="bold"
                android:fontFamily="@font/akayakanadaka_regular_fontfamily"
                android:textColor="@color/text_primary_color"
                />

            <TextView
                android:id="@+id/category_container_data_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_container_data_header"
                android:text="List of Item(12)"
                android:textSize="12sp"
                android:fontFamily="@font/actor_regular_fontfamily"
                android:textColor="@color/text_secondary_color"
                android:layout_marginTop="-18dp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/category_container_data_image"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignEnd="@id/category_container_data_theme"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>